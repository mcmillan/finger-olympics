*

	margin: 0
	padding: 0

body

	background: #333
	font: 13px 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif
	color: #fff
	text-shadow: 0 1px 3px rgba(0, 0, 0, 0.6)
	text-align: center

body, html

	height: 100%

.container

	position: absolute
	top: 50%
	height: 200px
	margin-top: -100px

	width: 100%

	h1

		font-size: 24px

		&.big

			font-size: 60px
			line-height: 180px

	a

		display: inline-block
		padding: 8px 18px
		background: -webkit-linear-gradient(#fff, #ddd) #fff
		border-radius: 5px
		box-shadow: inset 0 1px #fff, 0 1px 4px rgba(0, 0, 0, 0.1)
		border: 1px #fff solid
		text-shadow: none
		color: #000
		font-weight: bold
		text-decoration: none

	p

		margin: 20px 0
